/* pages/mys/mys.wxss */

page {
     background-color: #f7f7f7;
}

/* 模糊背景 */

.headIconBackground {
     filter: blur(30rpx);
     -webkit-filter: blur(30rpx);
     transform: scale(2);
     width: 100%;
     height: 25%;
     position: fixed;
}

/* 头像+名称 */

.image_user {
     display: flex;
     flex-direction: column;
     position: fixed;
     left: 37.5%;
     top: 20%;
     text-align: center;
}

/* 头像 */

.headIcon {
     width: 200rpx;
     height: 200rpx;
     border-radius: 100rpx;
     border: 2rpx solid white;
     background-color: #fff;
     margin-bottom: 25rpx;
}

/* 个人信息板块位置 */

.mys_center {
     width: 100%;
     position: absolute;
     top: 48%;
}

.mys_center_item {
     width: 100%;
     height: 75rpx;
     display: flex;
     flex-direction: row;
     /*实现垂直居中*/
     align-items: center;
     /*实现水平居中*/
     justify-content: center;
     text-align: justify;
     background-color: #ffffff;
     margin-bottom: 5rpx;
}

/* 设置信息文本标签样式 */

.mys_center_item .tag {
     width: 15%;
     font-family: "sans-serif";
     font-size: 0.8rem;
}

/* 设置信息文本数据样式 */

.mys_center_item .info {
     width: 80%;
     text-align: right;
     margin-right: 20rpx;
     color: #c8c8c8;
     font-size: 0.8rem;
}
